{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        // "declaration": true,
        "outDir": "dist/.tmp",
        "strict": true,
        "baseUrl": "./src/",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "skipLibCheck": true
    },
    "include": ["**/*"],
    "exclude": ["node_modules"]
}
